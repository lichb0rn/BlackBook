views:
  - type: table
    name: Table
    filters:
      and:
        - file.folder.startsWith("10_Tasks")
        - file.hasTag("type/incident")
    order:
      - file.name
      - task
      - summary
      - created
    sort:
      - property: summary
        direction: ASC
      - property: file.name
        direction: DESC
      - property: file.mtime
        direction: DESC
    columnSize:
      file.name: 469
      note.task: 189
      note.summary: 312
